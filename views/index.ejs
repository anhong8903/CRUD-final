<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Hong Quoc An Web</title>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form Example</title>
    <style>
        input {
            display: block;
            margin-bottom: 15px;
            width: 200px;
        }

        button {
            margin-top: 10px;
        }
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f9;
            color: #333;
            padding: 20px;
        }

        .quotes {
            list-style: none;
            padding: 0;
            max-width: 600px;
            margin: 0 auto;
        }

        .quote {
            background-color: #fff;
            border: 1px solid #ddd;
            padding: 10px;
            margin-bottom: 10px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

        .quote:hover {
            transform: scale(1.02);
            box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);
        }

        .quote-id {
            font-weight: bold;
            color: #007BFF;
        }

        .quote-name {
            font-style: italic;
            color: #28A745;
            margin-left: 10px;
        }

        .quote-price {
            font-weight: bold;
            color: #DC3545;
            margin-left: 10px;
        }
        #credit {
    position: absolute;
    right: 10px;
    bottom: 10px;
    font-size: 12px;
    color: gray;
}
.creator-info {
        position: fixed; /* Giữ cố định */
        bottom: 10px; /* Cách đáy 10px */
        right: 10px; /* Cách phải 10px */
        background-color: rgba(0, 0, 0, 0.7); /* Màu nền đen trong suốt */
        color: white; /* Màu chữ trắng */
        padding: 5px 10px;
        border-radius: 5px; /* Bo góc */
        font-family: 'Arial', sans-serif;
        font-size: 12px;
        z-index: 1000; /* Luôn nằm trên các phần tử khác */
    }
    </style>
</head>

<body>
    <div class="creator-info">
        <p>Hồng Quốc An</p>
        <p>GCS210868</p>
        <p>GCS1101</p>
    </div>    
    <h1>An's Toy Store</h1>
    <h3>Adding new items</h3>
    <!-- (1): CREATE Task -->
    <!-- -->
    <form action="/quotes" method="POST">
        <input type="text" placeholder="ID" name="ID" />
        <input type="text" placeholder="Name" name="name" />
        <input type="text" placeholder="Price" name="price" /></br>
        <button type="submit">Submit</button>
    </form>
    <!-- -->

    <!-- (2) READ Task -->
    <h2> List Toys :</h2>
    <ul class="quotes">
        <!-- Loop through quotes -->
        <% for(var i=0; i < quotes.length; i++) {%>
            <li class="quote">
                <span>
                    <%= quotes[i].ID %>
                </span>/
                <span>
                    <%= quotes[i].name %>
                </span> :
                <!-- Output quote from the iterated quote object -->
                $<span>
                    <%= quotes[i].price %>
                </span>
                
            </li>
        <% } %>
    </ul>

    <!-- (3) UPDATE Task -->
    <div>
        <h2>Update List Toys</h2>
    
        <button id="update-button">Update</button>
    </div>

    <div>
        <h2>Remove Items </h2>
        
        <button id="delete-button">Remove</button>
    </div>

    <!-- ... -->
    <script src="/main.js"></script>

</body>

</html>